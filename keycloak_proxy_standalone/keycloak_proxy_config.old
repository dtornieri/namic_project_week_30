---
apiVersion: v1
data:
  proxy.json: |-
    {
        "target-url":"http://traefik-ingress-service.kube-system.svc.cluster.local:80",
        "send-access-token": true,
        "bind-address":"0.0.0.0",
        "http-port":"8080",
        "https-port":"8443",
        "keystore": "/ssl/tls.jks",
        "keystore-password": "password",
        "key-password": "password",
        "applications":[
           {
              "base-path":"/",
              "adapter-config":{
                "realm": "namic",
                "auth-server-url": "https://192.168.99.100:30443/auth",
                "ssl-required": "external",
                "resource": "namic",
                "truststore": "/ssl/tls.jks",
                "truststore-password": "password",
                "credentials": {
                    "secret": "217ae38f-0b31-4334-bb0f-0071e6da7a26"
                }
              },
              "constraints":[
              {
                  "pattern":"/auth/*",
                  "permit-and-inject": true
              },
              {
                  "pattern":"/*",
                  "roles-allowed":[
                      "user",
                      "admin"
                  ]
              }
              ]
           }
        ]
     }
kind: ConfigMap
metadata:
  name: keycloak-proxy-config
  namespace: kube-system
